<%= form_for(@item)do |f| %>
    <% if @item.errors.any? %>
        <div id = "error">
        <h2><%= pluralize(@item.errors.count, "error") %> Prohibit this Item from being saved.</h2>
        
        <ul>
            <% @item.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

<fieldset>
<div class="row">
    <div class="input-field col s12">
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </div>
</div>

<div class="row">
<form class="col s12">
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :description %><br/>
      <%= f.text_field :description %>
    </div>
  </div>
</form>
</div>

<div class="row">
    <div class="input-field col s6">
        <%= f.label :category %><br/><br/>
        <%= f.select(:category, [['Boards','boards'],['Pieces','pieces'],['Clocks','clocks'],['Supplies','supplies']],{include_blank: "Select Item Category"}, {:class => "browser-default"})%>
    </div>

    <div class="input-field col s6">
      <%= f.label :color %><br/>
      <%= f.text_field :color %>
    </div>
</div>

<div class="row">
    <div class="input-field col s12">
      <%= f.label :weight %><br/>
      <%= f.text_field :weight %>
    </div>
</div>
<div class="row">
    <div class="input-field col s12">
      <%= f.label :reorder_level %><br/>
      <%= f.text_field :reorder_level %>
    </div>
</div>

<div class="row">
    <div class="input-field col s12">

      <%= f.check_box :active, class: "browser-default" %>
      <%= f.label :active %>
    </div>
</div>

<div class="row">
    <div class="col s2 offset-s8">
      <%= f.submit "Update Item", class:"waves-effect waves-light btn"%>
    </div>
    <div class = "col s2">
    <%= link_to "Cancel", items_path, class:"waves-effect waves-light btn" %>
    </div>
</div>
</fieldset>
<% end %>