<h1>View Item Details</h1><br/>

<% if @item.blank? %>
    <p>No Such Item Found</p>
<% else %>
    <p><%= notice %></p>
    <h2><%=  @item.name %></h2>
    <p><% if @item.current_price.blank? != true %>
        <%= 'Price: ' + number_to_currency(@item.current_price, precision: 2) %>   
       <% else %> 
        <%= 'Price: N/A' %> <% end %></p>
    <p><%=  'Description: ' + @item.description %></p>
    <p>Inventory Level: <%=  @item.inventory_level %></p>
    <p>Reorder Level: <%=  @item.reorder_level %></p>
    <p>Color: <%=  @item.color %></p>

    <% if @item.item_prices.blank? != true %>
        <h2>Price History</h2>
        <table>
            <tr>
                <th>Price</th>
                <th>Start Date</th>
            </tr>
            <% @price_history.each do |p| %>
                <tr>
                    <td><%= number_to_currency(p.price, precision: 2) %></td>
                    <td><%= p.start_date %></td>
                </tr>
            <% end %>
        </table>
    <% end %>

    <% if @similar_items.blank? == false %>
        <h2>Similar Items</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
            <% @similar_items.each do |s| %>
                <tr>
                    <td><%= s.name %></td>
                    <td><%= number_to_currency(s.current_price, precision: 2) %></td>
                </tr>
            <% end %>
        </table>
    <% end %>

<% end %>